<main class="form-wrapper">

  <% let messages = locals.messages || []; %>

  <h1><%= title %></h1>

  <!-- Flash messages -->
  <% if (messages.length > 0) { %>
    <div class="flash-messages">
      <% messages.forEach(msg => { %>
        <ul class="flash"><%= msg %></ul>
      <% }) %>
    </div>
  <% } %>

  <!-- Validation errors -->
    <% if (errors && errors.length > 0) { %>
    <ul class="notice">
        <% errors.forEach(error => { %>
        <li><%= error.msg %></li>
        <% }) %>
    </ul>
    <% } %>

<form action="/inv/update" method="post" class="styled-form" id="updateForm">


    <!-- Classification Select -->
     <small class="hint">ALL FIELD ARE REQUIRED</small> <br>
    <label for="classificationList">Classification</label>
    <small class="hint">Select a classification for the vehicle</small>
    <%- classificationSelect %>


    <!-- Vehicle Make -->
    <label for="inv_make">Make</label>
    <input
      type="text"
      name="inv_make"
      id="inv_make"
      value="<%= typeof inv_make !== 'undefined' ? inv_make : '' %>"
      required
    >

    <!-- Vehicle Model -->
    <label for="inv_model">Model</label>
    <input
      type="text"
      name="inv_model"
      id="inv_model"
      value="<%= typeof inv_model !== 'undefined' ? inv_model : '' %>"
      required
    >

    <!-- Vehicle Description -->
    <label for="inv_description">Description</label>
    <textarea
      name="inv_description"
      id="inv_description"
      rows="4"
      required
    ><%= typeof inv_description !== 'undefined' ? inv_description : '' %></textarea>

    <!-- Image Path -->
    <label for="inv_image">Image Path</label>
    <input
      type="text"
      name="inv_image"
      id="inv_image"
      value="<%= typeof inv_image !== 'undefined' ? inv_image : '/images/no-image.png' %>"
      required
    >

    <!-- Thumbnail Path -->
    <label for="inv_thumbnail">Thumbnail Path</label>
    <input
      type="text"
      name="inv_thumbnail"
      id="inv_thumbnail"
      value="<%= typeof inv_thumbnail !== 'undefined' ? inv_thumbnail : '/images/no-image.png' %>"
      required
    >

    <!-- Price -->
    <label for="inv_price">Price</label>
    <input
      type="number"
      name="inv_price"
      id="inv_price"
      min="1"
      step="0.01"
      value="<%= typeof inv_price !== 'undefined' ? inv_price : '' %>"
      required
    >

    <!-- Year -->
    <label for="inv_year">Year</label>
    <input
      type="number"
      name="inv_year"
      id="inv_year"
      min="1900"
      max="<%= new Date().getFullYear() %>"
      value="<%= typeof inv_year !== 'undefined' ? inv_year : '' %>"
      required
    >

    <!-- Mileage -->
    <label for="inv_miles">Mileage</label>
    <input
      type="number"
      name="inv_miles"
      id="inv_miles"
      min="0"
      value="<%= typeof inv_miles !== 'undefined' ? inv_miles : '' %>"
      required
    >

    <!-- Color -->
    <label for="inv_color">Color</label>
    <input
      type="text"
      name="inv_color"
      id="inv_color"
      value="<%= typeof inv_color !== 'undefined' ? inv_color : '' %>"
      required
    >

    <button type="submit" class="submit-btn" disabled>Update Vehicle </button>
    <input type="hidden" name="inv_id"
    <% if(locals.inv_id) { %> value="<%= locals.inv_id %>"
    <% } %>>
  </form>
</main>
<script src="/js/inv-update.js"></script>
