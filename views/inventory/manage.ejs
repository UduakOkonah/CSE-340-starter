
<main class="main form-container">
  <h1><%= title %></h1>

  <!-- Flash messages -->
  <% if (messages && messages.length > 0) { %>
    <div class="flash-messages">
      <ul class="notice">
        <% messages.forEach(msg => { %>
          <li><%= msg %></li>
        <% }) %>
      </ul>
    </div>
  <% } %>

  <section class="management-links">
    <p>Use the links below to start an add process (these follow the MVC routes):</p>

    <ul>
      <li>
        <a href="/inv/add-classification" title="Add new classification">
          Add New Classification
        </a>
      </li>

      <li>
        <a href="/inv/add-inventory" title="Add new inventory item">
          Add New Inventory Item
        </a>
      </li>
    </ul>
  </section>

  <!-- BELOW THIS IS WHAT YOU MUST ADD -->

  <h2>Manage Inventory</h2>

  <p>Select a classification from the list to see the items belonging to that classification.</p>

  <%- classificationSelect %>

  <table id="inventoryDisplay"></table>

  <noscript>JavaScript must be enabled to use this page.</noscript>

</main>
<script src="/js/inventory.js"></script>

